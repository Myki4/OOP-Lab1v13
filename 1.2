#include <iostream>
#include <iomanip>
#include <cmath>

class Calculator
{
public:
    double x, y, z, b;

    Calculator(double x_val, double y_val, double z_val)
    {
        x = x_val;
        y = y_val;
        z = z_val;
        b = pow(cos(atan((pow(x, 3) + y) / (1 + pow(abs(z), 0.5)))), 2) +
            y * exp(-((3 * z - y) / (z + x)));
    }

    double calc_a()
    {
        double s1 = pow(sin(pow(abs(x + y), 0.3)), 2);
        double s2 = 0.3 + pow(b, 2) + pow(sin(pow(abs(z), 1.3)), 2);
        double s3 = tan(3 * x / z);
        double a = 1 + sqrt(s1) / s2 + s3;
        return a;
    }
};

int main()
{
    using namespace std;
    double x_start = -1;
    double x_end = 1;
    double delta_x = 0.2;

    for (double x_val = x_start; x_val <= x_end; x_val += delta_x)
    {
        Calculator calculator(x_val, 0.47, -1.32);
        double result_a = calculator.calc_a();
        double result_b = calculator.b;

        cout << fixed << setprecision(5);
        cout << "x = " << x_val << ", a = " << result_a << ", b = " << result_b << endl;
    }

    return 0;
}
